<p id="notice"><%= notice %></p>

<h1>Variatons</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Color</th>
      <th>Size</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Sku</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variatons.each do |variaton| %>
      <tr>
        <td><%= variaton.product %></td>
        <td><%= variaton.color %></td>
        <td><%= variaton.size %></td>
        <td><%= variaton.price %></td>
        <td><%= variaton.stock %></td>
        <td><%= variaton.sku %></td>
        <td><%= link_to 'Show', variaton %></td>
        <td><%= link_to 'Edit', edit_variaton_path(variaton) %></td>
        <td><%= link_to 'Destroy', variaton, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

